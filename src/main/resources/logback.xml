<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/result/logs.log</file>
        <append>true</append>
        <encoder>
            <pattern>%date [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
